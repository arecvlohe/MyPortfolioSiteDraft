#work
  padding 2em 0 7em 0

  h3
    text-align center
    margin-bottom 1em

  .projects-container
    clearfix();

    a
      text-decoration none

    .project
      display block
      width 33.333%
      height 100px
      float left
      position relative
      padding-top 10%
      overflow hidden

