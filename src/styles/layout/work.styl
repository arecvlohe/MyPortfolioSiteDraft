      .title
        text-align center
        text-transform uppercase
        color lighten(black, 13%)
        font 500 1em normal

      .overlay
        absolute top 150% bottom left right
        background transparentify(black, .9)
        transition .5s ease-in-out 0s
        display flex
        flex-direction column
        justify-content center
        align-items center

        strong
          color white
          text-transform uppercase
          font 300 1em normal
        i
          color white

        small
          font 300 .75em normal
          color white
          text-align center
          width 125px

      &:hover .overlay
        absolute top bottom left right
